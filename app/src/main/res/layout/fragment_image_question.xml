<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ImageQuestion">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/whiteHouseFront"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="30dp"
        android:id="@+id/question"
        android:layout_gravity="center"
        android:text="What's the name of the building? Please capitalize all letters without any blank space " />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAnswer"
        android:layout_marginBottom="120dp"
        android:layout_gravity="left|bottom"
        android:hint="Please enter your answer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginBottom="70dp"
        android:id="@+id/nextButton"
        android:layout_gravity="center_horizontal|bottom" />


</FrameLayout>
